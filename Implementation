#ifndef __ALZHEIMERS_SOUL_SATHI_H__
#define __ALZHEIMERS_SOUL_SATHI_H__

#include<string.h>
#include<stdlib.h>
#include<stdio.h>


/**
 * gives option to select what details 
 * we want and accepts only 6 options
 * such as personal details,family details,etc.
 * 
 */
   void opt();
   
   
/**
* gives the personnel details like
* name and address
*/
   void personnel_details();


/**
* Structer for address of the person
* like it gives the house no., area
* name district of the person
*/
   typedef struct address
   {
      int cross_num;
      int home_num;
      char name[10];
      char home_name[10] ;
      char street_name[10] ;
      char area_name[10];
      char dist[10];
   };

   
   /**
    * gives the date of birth 
    * 
    */
   void dob();

   
   /**
    * Gives the family details like
    *  relation with the person say 
    * like wife, daughter, son, friend, etc.
    * and also their contact number
    */
   void family_details();

   
   /**
    * gives the medical history of the person
    * say he has High BP or has heart related
    * problems etc. 
    */
   void medical_conditions();

   
   /**
    * gives the account details such as acc no.,
    * branch,etc. upon entering the correct pin
    */
   void account_details();
   
   
   /**
    * checks the pin to give the account details
    * of the person
    */
   void correct_pin();
   
   /**
    * exits from the program
    */
   void xit();

#endif
